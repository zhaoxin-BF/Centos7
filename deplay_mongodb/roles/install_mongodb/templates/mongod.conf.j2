# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /root/mongodb_install_file/log/mongod.log

# Where and how to store data.
storage:
  dbPath: /root/mongodb_install_file/data
  journal:
    enabled: true
replication:
    replSetName: rs0
#  engine:
#  mmapv1:
#  wiredTiger:

# how the process runs
processManagement:
  fork: true  # fork and run in background
  pidFilePath: /root/mongodb_install_file/run/mongod.pid  # location of pidfile

# network interfaces
net:
  port: {{mongodb_port}}
  #bindIp: 127.0.0.1  # Listen to local interface only, comment to listen on all interfaces.


